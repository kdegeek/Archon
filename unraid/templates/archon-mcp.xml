<?xml version="1.0"?>
<Container version="2">
  <Name>Archon-MCP</Name>
  <Repository>ghcr.io/coleam00/archon-mcp:latest</Repository>
  <Registry>https://ghcr.io</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/coleam00/Archon/issues</Support>
  <Project>https://github.com/coleam00/Archon</Project>
  <Overview>Archon MCP Server - Model Context Protocol server component of the Archon knowledge management system. Provides integration with AI code assistants like Cursor and Windsurf. Requires Archon Server to be running.</Overview>
  <Category>Productivity: Development: AI:</Category>
  <WebUI/>
  <TemplateURL>https://raw.githubusercontent.com/coleam00/Archon/main/unraid/templates/archon-mcp.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/coleam00/Archon/main/assets/icon-mcp.png</Icon>
  <ExtraParams>--restart=unless-stopped</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DateInstalled></DateInstalled>
  <DonateText>Support Archon Development</DonateText>
  <DonateLink/>
  <Requires>Archon Server component running. Supabase account configured.</Requires>
  <Config Name="MCP Port" Target="8051" Default="8051" Mode="tcp" Description="MCP protocol server port" Type="Port" Display="always" Required="true" Mask="false">8051</Config>
  <Config Name="AppData" Target="/appdata" Default="/mnt/user/appdata/archon/mcp" Mode="rw" Description="MCP configuration and cache storage" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/archon/mcp</Config>
  <Config Name="Data Storage" Target="/data" Default="/mnt/user/archon-data" Mode="rw" Description="Knowledge base and document storage" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/archon-data</Config>
  <Config Name="Logs" Target="/logs" Default="/mnt/user/appdata/archon/logs/mcp" Mode="rw" Description="MCP server log files" Type="Path" Display="advanced" Required="false" Mask="false">/mnt/user/appdata/archon/logs/mcp</Config>
  <Config Name="SUPABASE_URL" Target="SUPABASE_URL" Default="" Mode="" Description="Supabase project URL (required) - format: https://xxxxx.supabase.co" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="SUPABASE_SERVICE_KEY" Target="SUPABASE_SERVICE_KEY" Default="" Mode="" Description="Supabase service role key (required) - starts with eyJ..." Type="Variable" Display="always" Required="true" Mask="true"/>
  <Config Name="LOG_LEVEL" Target="LOG_LEVEL" Default="INFO" Mode="" Description="Logging level: DEBUG, INFO, WARNING, ERROR" Type="Variable" Display="advanced" Required="false" Mask="false">INFO</Config>
  <Config Name="PUID" Target="PUID" Default="99" Mode="" Description="User ID for file permissions (99=nobody)" Type="Variable" Display="advanced" Required="false" Mask="false">99</Config>
  <Config Name="PGID" Target="PGID" Default="100" Mode="" Description="Group ID for file permissions (100=users)" Type="Variable" Display="advanced" Required="false" Mask="false">100</Config>
  <Config Name="TZ" Target="TZ" Default="America/New_York" Mode="" Description="Container timezone" Type="Variable" Display="advanced" Required="false" Mask="false">America/New_York</Config>
  <Config Name="MCP_MAX_CONNECTIONS" Target="MCP_MAX_CONNECTIONS" Default="10" Mode="" Description="Maximum concurrent MCP connections" Type="Variable" Display="expert" Required="false" Mask="false">10</Config>
  <Config Name="MCP_TIMEOUT" Target="MCP_TIMEOUT" Default="30" Mode="" Description="MCP request timeout in seconds" Type="Variable" Display="expert" Required="false" Mask="false">30</Config>
</Container>