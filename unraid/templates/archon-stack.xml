<?xml version="1.0"?>
<Container version="2">
  <Name>Archon-Stack-Deployer</Name>
  <Repository>alpine:latest</Repository>
  <Registry>https://hub.docker.com/</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/coleam00/Archon/issues</Support>
  <Project>https://github.com/coleam00/Archon</Project>
  <Overview>Archon Stack Deployer - Helper container that deploys the full Archon multi-service stack using Docker Compose. This container downloads the Archon repository and executes the deployment script to start all services (API Server, MCP Server, AI Agents, and Web UI). The container will exit after successful deployment, leaving the Archon stack running.</Overview>
  <Category>Productivity: Development: AI:</Category>
  <WebUI>http://[IP]:3737/</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/coleam00/Archon/main/unraid/templates/archon-stack.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/coleam00/Archon/main/assets/icon.png</Icon>
  <ExtraParams>--restart=no</ExtraParams>
  <PostArgs>sh -c "apk add --no-cache curl bash git unzip docker-cli docker-cli-compose && ARCHON_RELEASE_VERSION=$ARCHON_RELEASE_VERSION curl -fsSL https://raw.githubusercontent.com/coleam00/Archon/${ARCHON_RELEASE_VERSION:-main}/unraid/scripts/deploy.sh | bash"</PostArgs>
  <CPUset/>
  <DateInstalled></DateInstalled>
  <DonateText>Support Archon Development</DonateText>
  <DonateLink/>
  <Requires>Supabase account with project configured. Docker daemon access required.</Requires>
  <Config Name="Docker Socket" Target="/var/run/docker.sock" Default="/var/run/docker.sock" Mode="rw" Description="Docker daemon socket for container management" Type="Path" Display="always" Required="true" Mask="false">/var/run/docker.sock</Config>
  <Config Name="Config" Target="/config" Default="/mnt/user/appdata/archon" Mode="rw" Description="Application data and configuration" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/archon</Config>
  <Config Name="Data" Target="/data" Default="/mnt/user/archon-data" Mode="rw" Description="Knowledge base and document storage" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/archon-data</Config>
  <Config Name="SUPABASE_URL" Target="SUPABASE_URL" Default="" Mode="" Description="Supabase project URL (required) - format: https://xxxxx.supabase.co" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="SUPABASE_SERVICE_KEY" Target="SUPABASE_SERVICE_KEY" Default="" Mode="" Description="Supabase service role key (required) - starts with eyJ..." Type="Variable" Display="always" Required="true" Mask="true"/>
  <Config Name="OPENAI_API_KEY" Target="OPENAI_API_KEY" Default="" Mode="" Description="OpenAI API key for AI features (optional)" Type="Variable" Display="always" Required="false" Mask="true"/>
  <Config Name="COMPOSE_PROJECT_NAME" Target="COMPOSE_PROJECT_NAME" Default="archon" Mode="" Description="Docker Compose project name" Type="Variable" Display="advanced" Required="false" Mask="false">archon</Config>
  <Config Name="LOG_LEVEL" Target="LOG_LEVEL" Default="INFO" Mode="" Description="Logging level: DEBUG, INFO, WARNING, ERROR" Type="Variable" Display="advanced" Required="false" Mask="false">INFO</Config>
  <Config Name="PUID" Target="PUID" Default="99" Mode="" Description="User ID for file permissions (99=nobody)" Type="Variable" Display="advanced" Required="false" Mask="false">99</Config>
  <Config Name="PGID" Target="PGID" Default="100" Mode="" Description="Group ID for file permissions (100=users)" Type="Variable" Display="advanced" Required="false" Mask="false">100</Config>
  <Config Name="TZ" Target="TZ" Default="America/New_York" Mode="" Description="Container timezone" Type="Variable" Display="advanced" Required="false" Mask="false">America/New_York</Config>
  <Config Name="ENABLE_PROJECTS" Target="ENABLE_PROJECTS" Default="true" Mode="" Description="Enable project management features" Type="Variable" Display="advanced" Required="false" Mask="false">true</Config>
  <Config Name="MAX_WORKERS" Target="MAX_WORKERS" Default="4" Mode="" Description="Maximum API worker threads" Type="Variable" Display="expert" Required="false" Mask="false">4</Config>
  <Config Name="LOGFIRE_TOKEN" Target="LOGFIRE_TOKEN" Default="" Mode="" Description="Logfire observability token (optional)" Type="Variable" Display="expert" Required="false" Mask="true"/>
  <Config Name="ARCHON_RELEASE_VERSION" Target="ARCHON_RELEASE_VERSION" Default="" Mode="" Description="Archon release version/tag to deploy (default: main branch). For security, pin to specific version like 'v1.0.0'. Leave empty for latest." Type="Variable" Display="advanced" Required="false" Mask="false"/>
</Container>